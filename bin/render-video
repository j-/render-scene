#!sh

SCENE_NAME="$(node -e "console.log(require('./src/config.json').name)")"

ffmpeg \
  -i "./out/$SCENE_NAME/frame-%05d.png" \
  -c:v libx264 \
  -pix_fmt yuv420p \
  -preset veryslow \
  -tune stillimage \
  -shortest \
  "./out/$SCENE_NAME/$SCENE_NAME.mp4"

ln -s "$PWD/out/$SCENE_NAME/$SCENE_NAME.mp4" "$PWD/public/$SCENE_NAME.mp4"
